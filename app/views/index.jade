doctype html
html(lang='en', ng-app="app")
  head
    base(href='/')
    title Leaderboard
    // CSS
    link(rel="stylesheet", href="../lib/css/bootstrap.css")
    link(rel="stylesheet", href="../lib/css/font-awesome.css")
    link(rel="stylesheet", href="../styles/style.css")
  body(ng-controller="AppController")
    
    // Navbar
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Leaderboard
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/leaders") Leaders
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown", role="button") Teams
                span.caret
              ul.dropdown-menu
                li
                  a(href="/teams") Team List
                li
                  a(href="/team/create") New Team
            li.dropdown
              a.dropdown-toggle(data-toggle="dropdown", role="button") Players
                span.caret
              ul.dropdown-menu
                li
                  a(href="/teams") Player List
                li
                  a(href="/team/create") New Player
              
    div(ng-view)
    
    // jQuery / Bootstrap
    script(type="text/javascript", src="../lib/js/jquery.js")
    script(type="text/javascript", src="../lib/js/bootstrap.js")
    
    // Angular Libraries
    script(type="text/javascript", src="../lib/js/angular.js")
    script(type="text/javascript", src="../lib/js/angular-route.js")
    
    // Formly
    script(type="text/javascript", src="../lib/js/api-check.js")
    script(type="text/javascript", src="../lib/js/formly.js")
    script(type="text/javascript", src="../lib/js/angular-formly-templates-bootstrap.js")
    
    // Application
    script(type="text/javascript", src="../app.js")
    script(type="text/javascript", src="../constants.js")
    
    // Controllers
    script(type="text/javascript", src="../controllers/app.js")
    script(type="text/javascript", src="../controllers/teams.js")
    script(type="text/javascript", src="../controllers/create-team.js")
    script(type="text/javascript", src="../controllers/players.js")
    script(type="text/javascript", src="../controllers/leaderboard.js")
    
    // Services
    script(type="text/javascript", src="../services/teams.js")
    script(type="text/javascript", src="../services/players.js")
